pages
- page_demo
    title: Demonstration
    url
      match: %^/demo$%
    access
      roles
      - anonymous: anonymous
    content
    - demo_text
        type: text
        content: [demo_text] Some inline text.
        region: content
    - demo_code
        type: code
        handler: \effectivecore\modules\demo\events::on_code_show
        region: content
    - demo_text_from_file
        type: file
        file: include/text.txt
        region: content
    - demo_link_to_settings
        type: link
        entity: forms/user/form_user_login
        region: content
    - demo_markup|markup
        type: span
        properties
          class: test-span
          style: font-weight: bold
        content
        - some_link|markup
            type: a
            properties
              class: some-link
              href: /demo
            content: [demo_markup] some markup
        region: content