forms
- form_demo|form
    attributes
      id: demo
      novalidate: 1
      method: post
    on_submit
      handler: \effectivecore\modules\demo\events_form::on_submit_demo
    children
    - field_text|markup
        type: input
        attributes
          type: text
          name: text
          placeholder: Any text here...
          required: 1
          maxlength: 255
    - button_login|markup
        type: input
        attributes
          type: submit
          name: button
          value: ok