
/* grid */

[data-type='grid-custom'][data-manage-mode='customization'] {
  display: block;
  padding: 20px;
  background: %%_color(ok|o=.1);
}

[data-type='grid-custom'][data-manage-mode='customization'] * {
  user-select: none;
 -webkit-user-select: none;
}

[data-type='grid-custom'][data-manage-mode='customization'] [data-grid-manager] {
  display: grid;
}

[data-type='grid-custom'][data-manage-mode='customization'] [data-grid-item] {
  display: block;
  box-sizing: border-box;
  min-width: 87px;
  margin: 1px;
  padding: 20px;
  color: %%_color(text);
  text-align: center;
  border: 1px solid %%_color(ok);
  background: %%_color(fieldset);
}



/* grid fixer */

[data-type='grid-custom'][data-manage-mode='customization'][data-w='2'] [data-grid-manager] {grid-template-columns: repeat(2, 1fr)}
