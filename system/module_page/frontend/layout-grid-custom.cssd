/* activator */

[data-type='grid-custom'][data-manage-mode='customization'] input[data-type='item-activator'] {
  position: relative;
  margin: 5px 0 0 5px;
  width: 12px;
  height: 12px;
  border: 1px solid black;
  background: white;
}

[data-type='grid-custom'][data-manage-mode='customization'] input[data-type='item-activator']:checked {
  background: deepskyblue;
}



/* scaler */

[data-type='grid-custom'][data-manage-mode='customization'] input[data-type^='scaler'] {
  appearance: none;
 -webkit-appearance: none;
  display: inline-block;
  position: relative;
  margin: 0;
  padding: 0;
  cursor: pointer;
  border-radius: 0;
  border: 1px solid black;
  background: white;
}

[data-type='grid-custom'][data-manage-mode='customization'] input[data-type^='scaler']:checked {
  background: deepskyblue;
}

[data-type='grid-custom'][data-manage-mode='customization'] input[data-type^='scaler']:disabled {
  opacity: .1;
  cursor: not-allowed;
  background: silver;
}



